<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ProduceAssemblyReference>true</ProduceAssemblyReference>
    <PackageVersion>1.1</PackageVersion>
    <Authors>Marius Muntean</Authors>
    <Copyright>Marius Muntean 2019</Copyright>
    <PackageLicenseUrl>https://github.com/mariusmuntean/RainbowLoading.Forms/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/mariusmuntean/RainbowLoading.Forms</PackageProjectUrl>
    <Summary>A SkiaSharp implementation of the famous Android loading indicator for Xamarin.Forms.</Summary>
    <PackageTags>xamarin.forms SkiaSharp</PackageTags>
    <Title>RainbowLoading</Title>
    <Description>Rainbow Loading
A SkiaSharp implementation of the famous Android loading indicator for Xamarin.Forms.</Description>
    <Owners>Marius Muntean</Owners>
    <PackOnBuild>true</PackOnBuild>
    <PackageId>de.marius.rainbowloading</PackageId>
    <PackageReleaseNotes>Works with Xamarin.Forms 3.x</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Forms" Version="3.6.0.293080" />
    <PackageReference Include="SkiaSharp.Views.Forms" Version="1.68.0" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Remove="RainbowLoading.xaml" />
  </ItemGroup>
